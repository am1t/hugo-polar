{{ $link_text := $.Site.Params.reply_by_email_link_text }}
{{ $show_title := $.Site.Params.reply_by_email_show_title }}
{{ $show_plain := $.Site.Params.reply_by_email_show_plain }}
{{ $email_address := $.Site.Params.reply_by_email_address }}
{{ $email_address_present := in $email_address "@" }}
{{ $enable_obfuscation := $.Site.Params.reply_by_email_enable_obfuscation }}

{
	"version": "https://jsonfeed.org/version/1",
	"title": "Excursions by Amit Gawande",
	"icon": "{{ .Site.Author.avatar }}",
	"home_page_url": "{{ .Site.BaseURL }}",
	"feed_url": "{{ .Site.BaseURL }}feed.json",
	"items": [
		{{- $list := first 25 (where .Site.Pages "Type" "post") -}}
		{{- $len := (len $list) -}}
		{{ range $index, $value := $list }}
			{
				{{ $subject := $.Site.Params.reply_by_email_subject_prefix }}
				{{ if (and .Title $show_title) }}
				{{ $subject = print $subject .Title }}
				{{ else if (and (not .Title) .Plain $show_plain) }}
				{{ $subject = (print $subject (replaceRE "(\\s)" " " .Plain)) | htmlUnescape | truncate 60 }}
				{{ else }}
				{{ $subject = print $subject .Permalink }}
				{{ end }}
				{{ if .Params.guid -}}
				"id": "{{ .Params.guid }}",
				{{- else -}}
				"id": "{{ .Permalink }}",
				{{- end }}
				{{ if .Title -}}
				"title": {{ .Title | jsonify }},
				{{- end -}}
				{{- $s := .Content -}}
				{{- $comment := printf "<p><a href='%s#commento'>Comment</a> or <a href='mailto:%s?subject=%s'>Reply via Email</a></p>" .Permalink $email_address $subject -}}
				{{- $content_html := printf "%s\n%s" $s $comment | jsonify -}}
				{{- $content_html := replace $content_html "\\u003c" "<" -}}
				{{- $content_html := replace $content_html "\\u003e" ">" -}}
				{{- $content_html := replace $content_html "\\u0026" "&" }}
				"content_html": {{ $content_html }},
				"date_published": "{{ .Date.Format "2006-01-02T15:04:05-07:00" }}",
				"url": "{{ .Permalink }}"
				{{- with .Params.categories -}}
				,
				"tags": {{ . | jsonify }}
				{{- end }}
			}
			{{- if ne (add $index 1) $len -}},{{- end -}}
		{{ end }}
	]
}


"content_html": "\"\<p\>Friday evening began promising and then just fizzled out. I had planned many tasks but couldn\&rsquo;t get through to the majority. One big reason is that \<em\>I am shit tired\</em\>. My time at work is hectic. Worse, it is chaotic. So, each day leaves me mentally exhausted. Today was no different.\</p\>\\n\<p\>Not that I work long hours. Just the daily grind of finding clarity amidst the chaos, finding the right answers and the way forward sips the energy and drive from the non-office hours. Friday\&rsquo;s are worse because there\&rsquo;s the unspoken promise of recuperating through the imminent weekend. So, I simply give up on all the plans and sway along with my wandering mind.\</p\>\\n\<p\>Today was no different, as I signed the day off. With the hope that tomorrow, I regain the drive and cover for the time I lost.\</p\>\\n\"\n<p><a href='https://www.amitgawande.com/2024/01/19/friday-evenings-began.html#commento'>Comment</a> or <a href='mailto:reply@amitgawande.com?subject=Re: Friday evening began promising and then just fizzled â€¦'>Reply via Email</a></p>",